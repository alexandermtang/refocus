{
  // Required
  "manifest_version": 2,
  "name": "Refocus",
  "version": "1.0",

  // Recommended

  "description": "Focus on important things",
  "icons": {},


  "background":{
    "scripts" : ["redirectTab.js", "newtab.js","history.js"]
  },

  "browser_action": {
    "default_icon" : {
      "19" : "icon19.png"
    },
    "default_title": "Bookmark",
    "default_popup": "popup.html"
  },

  "permissions": [
    "bookmarks",
    "history",
    "tabs",
    "storage"
  ]

}
